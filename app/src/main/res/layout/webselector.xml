<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:orientation="vertical"
    android:paddingRight="8dp">
    <RelativeLayout
        android:layout_marginStart="10dp"
        android:layout_gravity="center"
        android:id="@+id/camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/callus"
            android:layout_marginStart="2dp"
            android:layout_width="wrap_content"
            android:text="India COVID-19 Tracker"
            android:textSize="17dp"
            android:fontFamily="@font/quicksand_semibold"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_below="@+id/callus"
            android:id="@+id/img1"
            android:layout_width="20dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/indiatracker"/>
        <TextView
            android:layout_marginTop="9dp"
            android:layout_alignTop="@+id/img1"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/img1"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:text="+919013151515"
            android:textSize="12dp"
            android:fontFamily="@font/quicksand_medium"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:layout_marginTop="8dp"
        android:id="@+id/view"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="#3EADADAD">
    </View>
    <RelativeLayout
        android:layout_marginStart="10dp"
        android:layout_gravity="center"
        android:id="@+id/mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/mailus"
            android:layout_marginStart="2dp"
            android:layout_width="wrap_content"
            android:text="World Health Organisation"
            android:textSize="17dp"
            android:fontFamily="@font/quicksand_semibold"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_below="@+id/mailus"
            android:id="@+id/img2"
            android:layout_width="18dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/whatsapp"/>
        <TextView
            android:layout_marginTop="9dp"
            android:layout_alignTop="@+id/img2"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/img2"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:text="+41225017596"
            android:textSize="12dp"
            android:fontFamily="@font/quicksand_medium"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>
